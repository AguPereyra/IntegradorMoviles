<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="@dimen/welcome_brand_image_width"
        android:layout_height="@dimen/welcome_brand_image_height"
        android:layout_marginTop="@dimen/welcome_brand_image_margin_top"
        android:layout_marginBottom="@dimen/welcome_brand_image_margin_bottom"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brand_name"/>

</LinearLayout>